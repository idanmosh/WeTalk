<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="91dp"
            android:layout_height="49dp"
            android:layout_marginEnd="8dp"
            android:scaleX="-1"
            app:layout_constraintBottom_toBottomOf="@+id/contactImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/contactImage"
            app:srcCompat="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/contactNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="name"
            android:textStyle="bold"
            android:textColor="@color/colorMenu"
            app:layout_constraintBottom_toBottomOf="@+id/toolbarContact"
            app:layout_constraintEnd_toStartOf="@+id/contactImage"
            app:layout_constraintTop_toTopOf="@+id/toolbarContact" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>